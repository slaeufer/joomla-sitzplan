<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="4.0" method="upgrade">
	<name>COM_SITZPLAN</name>
	<author>Sitzplan Team</author>
	<creationDate>2026-02-18</creationDate>
	<copyright>2026</copyright>
	<license>GNU General Public License v2 and later</license>
	<authorEmail>info@example.com</authorEmail>
	<version>1.0.0</version>
	<description>COM_SITZPLAN_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<administration>
		<menu>COM_SITZPLAN</menu>
		<files folder="admin">
			<filename>sitzplan.php</filename>
			<filename>controller.php</filename>
			<folder>views</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>sql</folder>
		</files>
		<languages folder="admin/language">
			<language tag="de-DE">de-DE/com_sitzplan.ini</language>
			<language tag="de-DE">de-DE/com_sitzplan.sys.ini</language>
			<language tag="en-GB">en-GB/com_sitzplan.ini</language>
		</languages>
	</administration>
	<install>
		<sql>
			<file driver="mysql" charset="utf8mb4">sql/mysql/install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8mb4">sql/mysql/uninstall.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/mysql</schemapath>
		</schemas>
	</update>
</extension>